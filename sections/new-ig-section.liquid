<div class="ssw-instagram-feed-wrap container page-width">
  <div class="new-ig-heading">{{ section.settings.heading }}</div>
    <div class="section clearfix">
      <div class="sixteen columns">
        <div class="clearfix placeholder-instagram">
          <div class="ssw-html-widget ssw-instagram-widget" data-module="service"  data-name="instagramPhotos" {{section.settings.option_galleries_id}}>
            <div class="ssw-page-loading">
              <span class="ssw-spin ssw-loader"></span>
            </div>
          </div>    
        </div>
      </div>
    </div>
</div>
{% schema %}
{
    "name": "New Shoppable Instagram",
    "class": "ssw-instagram-section",
    "settings": [
        {
            "type": "select",
            "id": "option_galleries_id",
            "options": [
                {
                    "group": "(#1) Get Inspired @livefreewell.co",
                    "value": "data-gallery_id=\"1\" data-widget=\"0\"",
                    "label": "grid"
                },
                {
                    "group": "(#1) Get Inspired @livefreewell.co",
                    "value": "data-gallery_id=\"1\" data-widget=\"1\"",
                    "label": "listing"
                },
                {
                    "group": "(#1) Get Inspired @livefreewell.co",
                    "value": "data-gallery_id=\"1\" data-widget=\"2\"",
                    "label": "slide"
                }
            ],
            "label": "Choose gallery"
        },
          {
            "type": "liquid",
            "id": "heading",
            "label": "Heading"
          }
    ],
    "presets": [
        {
            "name": "New Shoppable Instagram",
            "category": "Image"
        }
    ]
}
{% endschema %}